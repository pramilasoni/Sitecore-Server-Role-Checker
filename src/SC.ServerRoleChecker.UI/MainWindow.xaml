<Window x:Class="SC.ServerRoleChecker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC.ServerRoleChecker.UI"
        mc:Ignorable="d"
        Title="Sitecore Server Role Checker" Height="600" Width="1024">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="350">
			</ColumnDefinition>
			<ColumnDefinition Width="*">
			</ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<RadioButton x:Name="rbLucene" Content="Lucene" HorizontalAlignment="Left" Margin="179,46,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="scSearchProvider"/>
			<RadioButton x:Name="rbSOLR" Content="SOLR" HorizontalAlignment="Left" Margin="256,46,0,0" VerticalAlignment="Top" GroupName="scSearchProvider"/>
			<RadioButton x:Name="rb81" Content="8.1" HorizontalAlignment="Left" Margin="179,14,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="scVersion"/>
			<RadioButton x:Name="rb82" Content="8.2" HorizontalAlignment="Left" Margin="256,14,0,0" VerticalAlignment="Top" GroupName="scVersion"/>
			<Button x:Name="btnAnalyze" Content="Analyze" HorizontalAlignment="Left" Margin="179,239,0,0" VerticalAlignment="Top" Width="75" Click="btnAnalyze_Click"/>
			<TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Text="Sitecore Version"/>
			<Button x:Name="btnBrowseWebsiteFolder" Content="Browse" HorizontalAlignment="Left" Margin="179,80,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowseWebsiteFolder_Click"/>
			<TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" Text="Website Folder Path" VerticalAlignment="Top"/>
			<TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="Search Engine Provider" VerticalAlignment="Top"/>
			<TextBlock x:Name="textWebsiteFolderPath" HorizontalAlignment="Left" Margin="10,101,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top"/>
			<CheckBox x:Name="cbCD" Content="Content Delivery" HorizontalAlignment="Left" Margin="179,144,0,0" VerticalAlignment="Top"/>
			<CheckBox x:Name="cbCM" Content="Content Management" HorizontalAlignment="Left" Margin="179,164,0,0" VerticalAlignment="Top"/>
			<CheckBox x:Name="cbProcessing" Content="Processing" HorizontalAlignment="Left" Margin="179,184,0,0" VerticalAlignment="Top"/>
			<CheckBox x:Name="cbReportingService" Content="Reporting Service" HorizontalAlignment="Left" Margin="179,204,0,0" VerticalAlignment="Top"/>
			<TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,140,0,0" TextWrapping="Wrap" Text="Dedicated Role" VerticalAlignment="Top"/>
		</Grid>
		<DockPanel Grid.Column="1">
			<DataGrid x:Name="dataGrid" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		</DockPanel>
	</Grid>
</Window>
